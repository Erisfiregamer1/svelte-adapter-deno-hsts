{
	"name": "svelte-adapter-deno",
	"repository": {
		"type": "git",
		"url": "https://github.com/pluvial/svelte-adapter-deno.git"
	},
	"version": "0.8.2",
	"type": "module",
	"exports": {
		"import": "./index.js"
	},
	"main": "index.js",
	"types": "index.d.ts",
	"files": [
		"files",
		"index.d.ts",
		"deps.ts"
